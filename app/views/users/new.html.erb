<div class="newUser__container animate__animated animate__bounceIn">
<div class="newUser__containerForm">
<h1>Sign up!</h1>
<% if @user.errors.any?%>
    <ol>
        <% @user.errors.full_messages.each do |msg|%>
       <li><%= msg%></li> 
       <%end%>
    </ol>
<%end%>
<%=form_for @user do |f| %>
    <%= f.label :name, "User Name"%>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password%> 
    <%= f.label :password_confirmation%> 
    <%= f.password_field :password_confirmation%>
    <%= f.submit "Sign up!", :class => "signup__button"%> 
<%end%>
<p>Already have an acount ? <%= link_to 'login', login_path %></p>
</div>
</div>
