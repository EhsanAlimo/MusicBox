<div class="song__container">
<h1>All songs</h1>
<form action="/search">
<input type="text" name="q"  placeholder="Search" aria-label="Search">
<button type="submit">Search</button>
</form>

<%= link_to 'Create new song here', new_song_path %>
<%@songs.each do |song|%>
<div class="song_lists animate__animated animate__backInDown">
<div class="songList__top">
    <ul>
        <li>Name: <strong><%= song.name%></strong></li>
        <li>Genre: <strong><%=song.genre%></strong></li>
        <li>Artist: <strong><%=song.artist%></strong></li>
    </ul>
    
    <%==song.track%>
 </div>
    <div class="songList__bottom">
        <%=link_to "Add to a playlist and Edit", edit_song_path(song) %>
        <% if @current_user.admin? %>
        <%= link_to "Delete", song, :method => 'delete', :data => {:confirm => 'Are you sure ?'}, :class => "delete_link"%>

        <%end%>
    
    </div>
    </div>
<%end%>
</div>