<!DOCTYPE html>
<html>
  <head>
    <title>MusicBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
  </head>

  <body>
      <div class="backdrop"></div>
      <nav>
        <%= link_to 'About', root_path, :class => "homepage__nav"%>
        <% if @current_user.present? %>
        <% if @current_user.admin? %>
          <%= link_to 'All users', users_path %>
        <% end %>
        <%=link_to "New Playlist", new_playlist_path%>
        <%=link_to "All Playlists", playlists_path%>
        <%=link_to "All Songs", songs_path%>

          <%= link_to "Logout #{ @current_user.name }", login_path, :method => 'delete' %>
          <%else%>
        <%= link_to 'Sign up', new_user_path %>
        <%= link_to 'Sign in', login_path %>
      <%end%>
    </nav>
    <%= yield %>
  </body>
</html>
